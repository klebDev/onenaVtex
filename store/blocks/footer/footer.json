{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#infoCardContainerHomeLogos",
      "flex-layout.row#border",
      "flex-layout.row#newslett",
      "flex-layout.row#pagos",
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-3-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#Products",
      "vtex.menu@2.x:menu#footer-clothing",
      "vtex.menu@2.x:menu#footer-decoration",
      "flex-layout.col#mets"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "ONENA Todos los derechos reservados 2021",
      "blockClass": "footer",
      "textAlign": "center"
    },
    "title" : "Texto Footer"
  },
  "flex-layout.col#mets": {
    "children": [
      "flex-layout.row#metodos",
      "flex-layout.row#metodo"
    ],
    "props": {
      "blockClass": "mets"
    }
  },

  "flex-layout.row#metodos": {
    "children": [
      "flex-layout.col#metodos1",
      "flex-layout.col#metodos2",
      "flex-layout.col#metodos3"
    ]
  },
  "flex-layout.col#metodos1": {
    "children": [
      "image#metodo1"
    ]
  },
  "image#metodo1": {
    "props": {
      "src": "/arquivos/acertify.svg",
      "maxHeight": "50px",
      "blockClass" : "logo2Footer"
    }
  },
  "flex-layout.col#metodos2": {
      "children": [
        "image#metodo2"
      ]
    },
    "image#metodo2": {
      "props": {
        "src": "/arquivos/esr.svg",
        "maxHeight": "50px",
        "blockClass" : "logo2Footer"
      }
    },
    "flex-layout.col#metodos3": {
      "children": [
        "image#metodo3"
      ]
    },
    "image#metodo3": {
      "props": {
        "src": "/arquivos/asociation_de_internet.svg",
        "maxHeight": "50px",
        "blockClass" : "logo2Footer"
      }
    },
    "flex-layout.row#metodo": {
      "children": [
        "flex-layout.col#metod2",
        "flex-layout.col#metod1"


      ],
      "props": {
        "blockClass": "metodo"
      }
    },


    "flex-layout.row#metodoMobile": {
      "children": [
        "flex-layout.col#metod1","flex-layout.col#metod2"
      ],
      "props": {
        "blockClass": "metodo"
      }
    },

    "flex-layout.col#metod1": {
      "children": [
        "image#metod1"
      ],
      "props": {
        "blockClass": "metodo1"
      }
    },
    "image#metod1": {
      "props": {
        "src": "/arquivos/logo_puntocommerce.svg",
        "blockClass" : "logoPuntoCommerce"
      },
      "title" : "Logo Punto Commerce"
    },
    "flex-layout.col#metod2": {
        "children": [
          "image#metod2"
        ],
        "props": {
          "blockClass": "metodo2"
        }
      },
    "image#metod2": {
      "props": {
        "src": "/arquivos/powered_by_vtex.svg",
        "blockClass" : "metod2"
      },
      "title" : "Logo Vtex"
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#infoCardContainerHomeLogosMobile",
      "flex-layout.row#border",
      "flex-layout.row#newslett",
      "flex-layout.row#pagosMobile",
      "flex-layout.row#pagosMobile2",
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-socialLogos",
      "flex-layout.row#metodoMobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-socialLogos": {
    "children": ["flex-layout.col#socialLogo1", "flex-layout.col#socialLogo2"],
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4,
      "blockClass" : "2-footer-socialLogos"
    }
  },

  "flex-layout.col#socialLogo1": {
    "children": [
      "flex-layout.row#credes"
    ],
    "props" : {
      "blockClass" : "socialLogo1"
    }

  },


  "flex-layout.col#socialLogo2": {
    "children": [
      "flex-layout.row#redess"
    ],
    "props" : {
      "blockClass" : "socialLogo2"
    }
  },


  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "accepted-payment-methods",
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "ONENA Todos los derechos reservados 2021",
      "blockClass": "footer",
      "textAlign": "center"
    },
    "title" : "Texto Footer"
  }
}
